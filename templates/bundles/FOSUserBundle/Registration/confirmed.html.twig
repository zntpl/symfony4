{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {{ breadcrumbAdd('Registration account', path('fos_user_registration_register')) }}
    {{ breadcrumbAdd('Confirmed', path('fos_user_registration_confirmed')) }}
    <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
    {% if targetUrl %}
        <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
    {% endif %}
{% endblock body %}
